<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kw.com.ridewithme.MainActivity"
    android:orientation="vertical"

   >


    <TextView
        android:layout_width="700px"
        android:layout_height="50dp"
        android:text="Login or Sign Up "
        android:textSize="30sp"
        android:background="#8D9CE8"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
       android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="30dp"

        />
    <TextView
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="As"
        android:textSize="30sp"
       android:textColor="#000"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
         />
    <Button
        android:layout_width="210sp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="#F0EFDD39"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:text="A CUSTOMER"
        android:id="@+id/customer"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:background="#000"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"

            android:textColor="#020B25"
            android:textSize="30sp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="6dp"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:background="#000"
            android:layout_marginRight="20dp"
            />
    </LinearLayout>


    <Button
        android:layout_width="210sp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="#F0EFDD39"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:text=" A RIDER"
        android:id="@+id/rider"/>

   <TextView
       android:layout_width="220dp"
       android:textAlignment="center"
       android:layout_height="wrap_content"
       android:text="Pay To Use "
       android:textSize="30sp"
       android:background="#8D9CE8"
       android:layout_gravity="center"
       android:textStyle="bold"

       android:layout_marginTop="130dp"/>

    <Button
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_width="210sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:background="#F0EFDD39"

        android:text="QR_Generator"
        android:id="@+id/Generator"/>


</LinearLayout>
