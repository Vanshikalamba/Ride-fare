<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RiderReviewActivity"
    android:orientation="vertical">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="We hope you found the fare accurate and affordable"
    android:textAlignment="center"
    android:layout_gravity="center"
    android:textSize="28dp"
    android:textStyle="italic"
    android:layout_marginTop="40dp"/>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:id="@+id/rating_review"
        android:rating="3"
        android:stepSize="0.5"
        android:progressTint="#F0EFDD39"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Feedback"
        android:textSize="20dp"
        android:id="@+id/feedback"
        android:layout_marginTop="30dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:background="#8D9CE8"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:id="@+id/submit_review"
        android:layout_marginTop="30dp"/>
</LinearLayout>